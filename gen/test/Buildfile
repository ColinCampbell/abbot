# default behavior for a template is to just copy the contents of the
# templates directory to the end destination. Add any additional configs here.
config :templates,
  :root_dir   			=> '_class_path_/tests/_mvc_name_',
# array of directories where the current pwd (present working directory) should be
# if not found sc-gen will try to go up or down one level to find a suitable location
  :required_pwd 		=> ['apps', 'frameworks', 'themes', 'clients']